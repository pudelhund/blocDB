<% location = get_location %>
<% location_count = get_location_count %>

<div class="navbar navbar-inverse navbar-static-top <%= mobile_device? ? '' : 'navbar-fixed-top' %>" role="navigation"> 
	<div class="container-fluid"> 

		<!-- TODO: mobile menu richtig -->
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>

		<div class="collapse navbar-collapse" id="navbar-collapse-1"> 
			<ul class="nav navbar-nav">
				<% if location.nil? %>
					<li>
						<a class="navbar-brand" href="/">BoulderDB</a>
					</li> 
				<% else %>
					<li>
						<a class="navbar-brand" href="/"><%= location.name %></a>
					</li>
				<% end %>
				
				<li class="divider-vertical"></li>
				
				<% if location_count > 1 %>
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" data-target="#" href="<%= "#{request.fullpath}" %>">
						<i class="icon-flag baseline"></i> Standort <b class="caret"></b>
					</a>
					<ul class="dropdown-menu" role="menu">
						<% Location.all.each do |location| %>
							<li><%= link_to location.name, '/?lid=' + location.id.to_s %></li>
						<% end %>
					</ul>
				</li>
				<% end %>

				<li class="divider-vertical"></li>

				<li class="dropdown <%=cp('/boulders/todo')%> <%=cp('/boulders')%>">
					<a class="dropdown-toggle" data-toggle="dropdown" data-target="#" href="<%= "#{request.fullpath}" %>">
						<i class="icon-cloud baseline"></i> Boulder <b class="caret"></b>
					</a>
					<ul class="dropdown-menu" role="menu">
						<!-- <li><%= link_to "Nicht unmöglich", "/boulders" %></li> -->
						<li><%= link_to "Todo Liste", "/boulders/todo" %></li>
						<li><%= link_to "Alle Boulder", "/boulders" %></li>
						<!-- <li><%= link_to "Projekt", "/boulders" %></li> -->
						<!-- <li><%= link_to "Geschafft", "/boulders" %></li> -->
					</ul>
				</li>
				
				<li class="divider-vertical"></li>

				<li class="dropdown <%=cp('/ranking/points')%> <%=cp('/rankings/amount')%> <%=cp('/rankings/alltime')%>">
					<a class="dropdown-toggle" data-toggle="dropdown" data-target="#" href="<%= "#{request.fullpath}" %>">
						<i class="icon-trophy baseline"></i> Rankings <b class="caret"></b>
					</a>
					<ul class="dropdown-menu" role="menu">
						<li><%= link_to "Nach Punkten", "/rankings/points" %></li>
						<li><%= link_to "Nach Anzahl absolvierter Routen", "/rankings/amount" %></li>
						<li class="divider"></li>
						<li><%= link_to "All Time", "/rankings/alltime" %></li>
						<li class="divider"></li>
						<% get_active_events_by_location(get_locationID()).each do |event| %>
							<li><%= link_to event.name, '/rankings/event/' + event.id.to_s %></li>
						<% end %>
						<li><%= link_to "Abgelaufene Events", "/events/inactive" %></li>
					</ul>
				</li>
			</ul>

			<ul class="nav navbar-nav navbar-right"> 
				<% if is_admin? %>
					<li class="divider-vertical"></li>
					<%= main_nav_link('Admin', '/admin', 'icon-cog') %>
				<% end %>
				
				<li class="divider-vertical"></li>
				<%= main_nav_link(unread_doubts.to_s, '/boulder_doubts', 'icon-question-sign') %>
				
				<% if is_admin? %>	
					<li class="divider-vertical"></li>
					<%= main_nav_link(unread_errors.to_s, '/boulder_errors', 'icon-exclamation-sign') %>
				<% end %>
				<li class="divider-vertical"></li>
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" data-target="#" href="<%= "#{request.fullpath}" %>">
						<i class="icon-user baseline"></i> <%= current_user.username %> <b class="caret"></b>
					</a>
					<ul class="dropdown-menu" role="menu">
						<li><%= link_to "Meine Daten ändern", edit_user_path(current_user) %></li>
						<li><%= link_to "Mein Passwort ändern", '/users/'+current_user.id.to_s+'/chgpassword' %></li>
						<li class="divider"></li>
						<li><%= link_to "Meine To-Do Liste", '/boulders/todo' %></li>
						<li><%= link_to "Erledigte Routen", '/boulders/conquerored' %></li>
						<li class="divider"></li>
						<li><%= link_to "Log out", log_out_path, class: "" %></li>
					</ul>
				</li>
				<li class="divider-vertical"></li>
			</ul>
		</div><!-- /.nav-collapse --> 
	</div><!-- /navbar-inner --> 
</div><!-- /navbar -->