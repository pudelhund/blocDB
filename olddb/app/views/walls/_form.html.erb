      <ul>
      <% @wall.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.inputs do %>
    <%= f.input :name, :required => true %>
    <%= f.input :description, :input_html => { :rows => 7, :cols => 60 } %>
